<%= form_for (@cocktail) do |f| %>
  <div class="form-group">
    <%= f.label :Name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :ImageUrl %>
    <%= f.text_field :imageurl, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :Time %>
    <%= f.text_field :time, class: 'form-control' %>
  </div>

  <%= f.submit class: 'main-btn' %>
<% end %>
